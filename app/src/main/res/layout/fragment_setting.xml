<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EDED"
    android:padding="20dp"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutback"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/backarrow"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:layout_below="@id/layoutback"
        android:id="@+id/settingtext"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileimg"
        android:layout_below="@id/settingtext"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/profile"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settingpesonal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileimg"
        android:layout_marginTop="20dp"
        android:background="@drawable/settingfarg_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Personal inforamtion"
                android:layout_marginLeft="10dp"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/forward" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reset password"
                android:layout_marginLeft="10dp"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/forward" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notification"
        android:layout_below="@id/settingpesonal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/notification"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/settingfarg_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/settingnotification"
        android:layout_below="@id/notification"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reminder"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/forward"
                android:layout_marginStart="210dp"
                android:layout_marginTop="7dp"/>


        </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingnew"
        android:layout_below="@id/settingnotification"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/setting"/>





    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingnew"
        android:layout_marginTop="15dp"
        android:background="@drawable/settingfarg_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="About"
                android:layout_marginLeft="10dp"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/forward" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Log out"
                android:layout_marginLeft="10dp"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="234dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/forward" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>