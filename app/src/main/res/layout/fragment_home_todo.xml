<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeTodo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/backgroundtopbar"
            android:paddingTop="20dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:text="Hi Tejas ðŸ˜Ž"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Pending"
                    android:layout_marginEnd="50dp"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>


            </LinearLayout>
            <ImageView
                android:id="@+id/logoutbtn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:contentDescription="Logout"
                android:src="@drawable/profile"
                android:layout_marginStart="130dp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="35dp"
            android:layout_below="@id/toolbar"
            android:id="@+id/catagory">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cardviewlayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_below="@id/catagory">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:elevation="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#B3E5FC">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/todaystaskfrag"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/todaytask"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Make Today Count! â˜€ï¸"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_marginTop="9dp"/>

                    <ProgressBar
                        android:id="@+id/taskProgressBar"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="18dp"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:progressTint="#4CAF50"
                        android:backgroundTint="#FFFFFF"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="#B3E5FC">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/weeklytaskfrag"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weelytask"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Path to Progress ðŸš€ "
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:layout_marginTop="9dp"/>

                    <ProgressBar
                        android:id="@+id/taskProgressBarweek"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="18dp"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:progressTint="#4CAF50"
                        android:backgroundTint="#FFFFFF"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:id="@+id/taskstillgoing"
            android:layout_below="@id/cardviewlayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Still in Motion ðŸš€"
                    android:layout_marginStart="19dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="See All"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#FF3030"
                    android:layout_marginStart="208dp"/>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="19dp"
                app:cardBackgroundColor="#E0F7FA">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_below="@id/taskstillgoing">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="ðŸŽ¯ Goals Reached"
                    android:layout_marginStart="19dp"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="See All"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#FF3030"
                    android:layout_marginStart="208dp"/>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="19dp"
                app:cardBackgroundColor="#E0F7FA">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>





    </RelativeLayout>


</LinearLayout>